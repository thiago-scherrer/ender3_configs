# Top-most EditorConfig file
root = true

# Markdown files
[*.md]
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

# G-code files
[*.gcode]
trim_trailing_whitespace = true
insert_final_newline = true

# INI files
[*.ini]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# TXT files
[*.txt]
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

# YAML files
[*.yaml, *.yml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# JSON files
[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# C/C++ header files
[*.h]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
